<div>

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <br><br>
                                <div class="form-group">
                                    <div class="col-sm-12 mb-3 mb-sm-0 text-center">
                                        <h3><strong>Company Manager</strong></h3>
                                    </div>
                                </div>
                                <h1 class="h4 text-gray-900 mb-4">Hello &nbsp <strong><%= userInformation[0].name %></strong> </h1>
                            </div>
                            <form class="user" method="post">
                                <div class="form-group">
                                    <div class="col-sm-12 mb-3 mb-sm-0 text-center">
                                        <h4 style="color: blue;">Do You Really Want to Leave From Our System??</h4>
                                        <h4 style="color: blue;">If yes please fill up this Infomation And Notify Authority</h4>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label
                                          for="description"
                                          >To Authority...,</label
                                        >
                                        <textarea
                                          class="form-control validate"
                                          rows="3"
                                          name="notify"
                                          required
                                        ></textarea>
                                      </div>
                                      <input type="hidden" name="notificationType" value="leaveManager">
                                      <input type="hidden" name="userName" value="<%= userInformation[0].userName %>">
                                      <input type="hidden" name="userType" value="<%= userInformation[0].userType %>">
                                </div><hr>
                                    <button type="submit" class="btn btn-danger btn-block text-uppercase">Send</button>
                                <a href="/home/manager" class="btn btn-warning  btn-block text-uppercase">
                                    No
                                </a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
